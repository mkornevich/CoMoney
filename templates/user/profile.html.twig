{% extends 'layout/base.html.twig' %}

{% block title %}Пользователь{% endblock %}

{% block content %}

    <div class="container">
        <div class="card mt-5 m-auto" style="max-width: 800px">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title m-0">Профиль пользователя: {{ user.username }}</h5>
                {% if is_granted('edit', user) %}
                    <a class="btn btn-sm btn-primary float-end" href="{{ path('user_edit', {'id': user.id}) }}">Редактировать</a>
                {% endif %}
            </div>
            <ol class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="fw-bold">ФИО</div>
                    {{ user.fullName }}
                </li>
                <li class="list-group-item">
                    <div class="fw-bold">Email</div>
                    {{ user.email }}
                </li>
            </ol>
        </div>
    </div>

{% endblock content %}