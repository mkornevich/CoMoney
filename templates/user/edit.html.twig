{% extends 'layout/base.html.twig' %}

{% block title %}Редактирование пользователя{% endblock %}

{% block content %}

    <div class="container">
        <div class="card mt-5 m-auto" style="max-width: 800px">
            <div class="card-header">
                Редактирование
            </div>
            <div class="card-body">

                {{ form_start(form) }}
                {{ form_row(form.fullName) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.role) }}
                {{ form_row(form.password.first) }}
                {{ form_row(form.password.second) }}

                <button type="submit" class="btn btn-primary float-end">Сохранить</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock content %}