{% extends 'layout/base.html.twig' %}

{% block title 'Создание новой кампании' %}

{% block content %}

    <div class="container">
        <div class="card mt-5 m-auto" style="max-width: 800px">
            <div class="card-header">
                {{ block('title') }}
            </div>
            <div class="card-body">

                {{ form_start(form) }}

                {{ form_rest(form) }}

                <button type="submit" class="btn btn-primary float-end">Создать</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock content %}