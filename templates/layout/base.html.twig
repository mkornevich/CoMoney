<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title 'Welcome' %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

{% include 'layout/_menu.html.twig' %}

{% if block('column') is defined %}

    <div class="container">
        <div class="row mt-4">
            <div class="col-12 col-lg-9">
                {{ block('content') }}
            </div>
            <div class="col-lg-3">
                {{ block('column') }}
            </div>
        </div>
    </div>

{% else %}

    {% block content 'content' %}

{% endif %}

</body>
</html>
